@model CarEditViewModel

@{
    ViewData["Title"] = "Edit Car";
}

<h2>bewerk de gegevens van de auto</h2>
<div>

    <form asp-controller="Car" asp-action="EditSave" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Color">Kleur:</label>
            <input type="text" asp-for="Color" placeholder="Kleur van de auto." />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Buydate">Aanmaakdatum:</label>
            <input type="date" asp-for="Buydate" placeholder="Aankoopdatum van de auto." />
            <span asp-validation-for="Buydate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Plate">Nummerplaat:</label>
            <input type="text" asp-for="Plate" placeholder="Nummerplaat van de auto." />
            <span asp-validation-for="Plate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Owner">Eigenaar:</label>
            <select asp-for="OwnerId" asp-items="Model.Owners"></select>
            <span asp-validation-for="Owner" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cartype">Soort auto:</label>
            <select asp-for="CartypeId" asp-items="Model.Cartypes"></select>
            <span asp-validation-for="Cartypes" class="text-danger"></span>
        </div>


        <input type="submit" />
    </form>
</div>